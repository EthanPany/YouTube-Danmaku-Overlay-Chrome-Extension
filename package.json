{
  "name": "youtube-danmaku-overlay",
  "version": "1.0.0",
  "description": "A Chrome extension that overlays Bilibili danmaku comments on YouTube videos",
  "private": false,
  "scripts": {
    "start": "webpack --config webpack.config.js --watch",
    "build": "webpack --config webpack.config.js --mode=production",
    "clean": "rimraf build",
    "test": "jest",
    "lint": "eslint src/**/*.{js,jsx}",
    "lint:fix": "eslint src/**/*.{js,jsx} --fix",
    "format": "prettier --write src/**/*.{js,jsx,css,md}",
    "prepare": "husky install",
    "package": "npm run build && cd build && zip -r ../extension.zip *"
  },
  "keywords": [
    "youtube",
    "bilibili",
    "danmaku",
    "chrome-extension",
    "comments",
    "overlay"
  ],
  "author": "Ethan Pan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EthanPany/YouTube-Danmaku-Overlay-Chrome-Extension"
  },
  "bugs": {
    "url": "https://github.com/EthanPany/YouTube-Danmaku-Overlay-Chrome-Extension/issues"
  },
  "homepage": "https://github.com/EthanPany/YouTube-Danmaku-Overlay-Chrome-Extension#readme",
  "dependencies": {
    "ajv": "8.12.0",
    "ajv-keywords": "5.1.0",
    "chinese-conv": "^3.2.2",
    "chinese-s2t": "^1.0.0",
    "comment-core-library": "^0.11.1",
    "danmaku": "^2.0.8",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "html-loader": "^5.0.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.4",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
